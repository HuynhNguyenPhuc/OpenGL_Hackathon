<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Triangle Vertices -->
        <TextView
            android:id="@+id/textViewVertexA"
            style="@style/SectionTitle"
            android:text="Vertex A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXa"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextYa"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextZa"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewVertexB"
            style="@style/SectionTitle"
            android:text="Vertex B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXb"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextYb"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextZb"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewVertexC"
            style="@style/SectionTitle"
            android:text="Vertex C" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXc"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextYc"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextZc"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewPointP"
            style="@style/SectionTitle"
            android:text="Point P" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXp"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextYp"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextZp"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <!-- Point Normal -->
        <TextView
            android:id="@+id/textViewNormalA"
            style="@style/SectionTitle"
            android:text="Normal A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNxa"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNya"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNza"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewNormalB"
            style="@style/SectionTitle"
            android:text="Normal B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNxb"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNyb"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNzb"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewNormalC"
            style="@style/SectionTitle"
            android:text="Normal C" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNxc"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNyc"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNzc"
                style="@style/InputField"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmit"
            style="@style/ActionButton"
            android:text="Submit"
            android:layout_width="match_parent" />

        <!-- Return Button -->
        <Button
            android:id="@+id/buttonReturn"
            style="@style/ActionButton"
            android:text="Return"
            android:layout_width="match_parent" />

    </LinearLayout>
</ScrollView>