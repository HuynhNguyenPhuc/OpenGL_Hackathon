<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Triangle Vertices -->
        <TextView
            style="@style/SectionTitle"
            android:text="Triangle Vertex A [xa, ya, za]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXa"
                style="@style/InputField"
                android:hint="xa"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextYa"
                style="@style/InputField"
                android:hint="ya"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextZa"
                style="@style/InputField"
                android:hint="za"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            style="@style/SectionTitle"
            android:text="Triangle Vertex B [xb, yb, zb]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXb"
                style="@style/InputField"
                android:hint="xb"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextYb"
                style="@style/InputField"
                android:hint="yb"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextZb"
                style="@style/InputField"
                android:hint="zb"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            style="@style/SectionTitle"
            android:text="Triangle Vertex C [xc, yc, zc]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXc"
                style="@style/InputField"
                android:hint="xc"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextYc"
                style="@style/InputField"
                android:hint="yc"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextZc"
                style="@style/InputField"
                android:hint="zc"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            style="@style/SectionTitle"
            android:text="Point on Triangle P [xp, yp, zp]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXp"
                style="@style/InputField"
                android:hint="xp"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextYp"
                style="@style/InputField"
                android:hint="yp"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextZp"
                style="@style/InputField"
                android:hint="zp"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <!-- Point Normal -->
        <TextView
            style="@style/SectionTitle"
            android:text="Triangle Vertex A Normal [nxa, nya, nza]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNxa"
                style="@style/InputField"
                android:hint="nxa"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNya"
                style="@style/InputField"
                android:hint="nya"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNza"
                style="@style/InputField"
                android:hint="nza"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            style="@style/SectionTitle"
            android:text="Triangle Vertex B Normal [nxb, nyb, nzb]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNxb"
                style="@style/InputField"
                android:hint="nxb"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNyb"
                style="@style/InputField"
                android:hint="nyb"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNzb"
                style="@style/InputField"
                android:hint="nzb"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <TextView
            style="@style/SectionTitle"
            android:text="Triangle Vertex C Normal [nxc, nyc, nzc]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNxc"
                style="@style/InputField"
                android:hint="nxc"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNyc"
                style="@style/InputField"
                android:hint="nyc"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNzc"
                style="@style/InputField"
                android:hint="nzc"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmit"
            style="@style/ActionButton"
            android:text="Submit"
            android:layout_width="match_parent" />

        <!-- Return Button -->
        <Button
            android:id="@+id/buttonReturn"
            style="@style/ActionButton"
            android:text="Return"
            android:layout_width="match_parent" />

    </LinearLayout>
</ScrollView>
