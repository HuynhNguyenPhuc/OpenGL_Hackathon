<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ray Origin -->
        <TextView
            android:id="@+id/textViewRayOrigin"
            style="@style/SectionTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextX0"
                style="@style/InputField"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextY0"
                style="@style/InputField"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextZ0"
                style="@style/InputField"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Ray Direction -->
        <TextView
            android:id="@+id/textViewRayDirection"
            style="@style/SectionTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXd"
                style="@style/InputField"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextYd"
                style="@style/InputField"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextZd"
                style="@style/InputField"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Sphere Center -->
        <TextView
            android:id="@+id/textViewSphereCenter"
            style="@style/SectionTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextXc"
                style="@style/InputField"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextYc"
                style="@style/InputField"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextZc"
                style="@style/InputField"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Sphere Radius -->
        <TextView
            android:id="@+id/textViewSphereRadius"
            style="@style/SectionTitle" />

        <EditText
            android:id="@+id/editTextR"
            style="@style/InputField" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmit"
            style="@style/ActionButton"
            android:layout_width="match_parent"
            android:text="Submit" />

        <!-- Return Button -->
        <Button
            android:id="@+id/buttonReturn"
            style="@style/ActionButton"
            android:layout_width="match_parent"
            android:text="Return" />

    </LinearLayout>
</ScrollView>